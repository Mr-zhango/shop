<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.myfreecloud.shop.mapper.ProductMapper">

    <select id="queryHotProduct" resultType="cn.myfreecloud.shop.entity.Product">
        SELECT *
        FROM product
        where is_hot = '1'
        ORDER BY pdate desc
        limit 12
    </select>
    <select id="queryNewProduct" resultType="cn.myfreecloud.shop.entity.Product">
        SELECT *
        FROM product
        ORDER BY pdate desc
        limit 12
    </select>
</mapper>
